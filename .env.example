# Deribit MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Environment Selection
# =============================================================================
# prod = production (www.deribit.com)
# test = testnet (test.deribit.com)
DERIBIT_ENV=prod

# =============================================================================
# Private API Toggle
# =============================================================================
# Set to true to enable authenticated endpoints (account, positions, orders)
# Default: false (public read-only mode)
DERIBIT_ENABLE_PRIVATE=false

# =============================================================================
# API Credentials
# =============================================================================
# Only required if DERIBIT_ENABLE_PRIVATE=true
# Get your credentials from: https://www.deribit.com/account/api
# ⚠️ NEVER commit real credentials to version control!
DERIBIT_CLIENT_ID=YOUR_CLIENT_ID
DERIBIT_CLIENT_SECRET=YOUR_CLIENT_SECRET

# =============================================================================
# Network Settings
# =============================================================================
# Request timeout in seconds (default: 10)
DERIBIT_TIMEOUT_S=10

# Maximum requests per second (default: 8)
# Deribit has credit-based rate limiting, keep this conservative
DERIBIT_MAX_RPS=8

# =============================================================================
# Cache Settings
# =============================================================================
# Fast cache TTL for real-time data (ticker, orderbook) in seconds
DERIBIT_CACHE_TTL_FAST=1.0

# Slow cache TTL for metadata (instruments, expirations) in seconds
DERIBIT_CACHE_TTL_SLOW=30.0

# =============================================================================
# Trading Safety
# =============================================================================
# DRY RUN mode for order placement (default: true)
# When true, place_order only returns what would be sent, without executing
# ⚠️ Set to false ONLY if you understand the risks!
DERIBIT_DRY_RUN=true

# =============================================================================
# HTTP Server Settings
# =============================================================================
# Used when running in HTTP/SSE mode
DERIBIT_HOST=0.0.0.0

# Container internal port (normally keep 8000)
DERIBIT_PORT=8000

# Docker Compose host port (what you connect to from CherryStudio)
DERIBIT_HTTP_PORT=8005
